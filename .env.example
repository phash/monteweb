# PostgreSQL
POSTGRES_DB=monteweb
POSTGRES_USER=monteweb
POSTGRES_PASSWORD=changeme

# Redis
REDIS_PASSWORD=changeme

# JWT (generate with: openssl rand -base64 64)
JWT_SECRET=change-this-to-a-secure-random-string-at-least-64-chars-long-for-hmac-sha256

# MinIO (S3-compatible storage)
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=monteweb

# E-Mail (optional, disabled by default)
EMAIL_ENABLED=false
EMAIL_FROM=noreply@monteweb.local
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_AUTH=true
SMTP_STARTTLS=true

# OIDC/SSO (optional, disabled by default)
OIDC_ENABLED=false
OIDC_PROVIDER_NAME=oidc
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_ISSUER_URI=https://accounts.google.com

# Web Push Notifications (optional, disabled by default)
# Generate VAPID keys with: npx web-push generate-vapid-keys
PUSH_ENABLED=false
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@monteweb.local

# Application
APP_PORT=80
FRONTEND_URL=http://localhost
