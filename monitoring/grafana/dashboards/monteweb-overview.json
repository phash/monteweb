{
  "dashboard": {
    "id": null,
    "uid": "monteweb-overview",
    "title": "MonteWeb Overview",
    "tags": ["monteweb"],
    "timezone": "browser",
    "schemaVersion": 30,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "HTTP Request Rate",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count{application=\"monteweb\"}[5m])",
            "legendFormat": "{{method}} {{uri}} {{status}}"
          }
        ]
      },
      {
        "id": 2,
        "title": "HTTP Response Time (p95)",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_server_requests_seconds_bucket{application=\"monteweb\"}[5m]))",
            "legendFormat": "{{uri}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "JVM Heap Memory",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "targets": [
          {
            "expr": "jvm_memory_used_bytes{application=\"monteweb\", area=\"heap\"}",
            "legendFormat": "{{id}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes"
          }
        }
      },
      {
        "id": 4,
        "title": "Active DB Connections",
        "type": "stat",
        "gridPos": { "h": 8, "w": 6, "x": 12, "y": 8 },
        "targets": [
          {
            "expr": "hikaricp_connections_active{application=\"monteweb\"}",
            "legendFormat": "Active"
          }
        ]
      },
      {
        "id": 5,
        "title": "System CPU Usage",
        "type": "gauge",
        "gridPos": { "h": 8, "w": 6, "x": 18, "y": 8 },
        "targets": [
          {
            "expr": "process_cpu_usage{application=\"monteweb\"}",
            "legendFormat": "CPU"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "max": 1
          }
        }
      },
      {
        "id": 6,
        "title": "HTTP Error Rate (4xx + 5xx)",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count{application=\"monteweb\", status=~\"4..|5..\"}[5m])",
            "legendFormat": "{{status}} {{uri}}"
          }
        ]
      },
      {
        "id": 7,
        "title": "JVM Threads",
        "type": "stat",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
        "targets": [
          {
            "expr": "jvm_threads_live_threads{application=\"monteweb\"}",
            "legendFormat": "Live Threads"
          }
        ]
      }
    ]
  },
  "overwrite": true
}
